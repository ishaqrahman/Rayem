                <a href="#conservation" style={{ color: '#fff' }}>Conservation</a>
            </nav>
        </header>
    );
}

function About() {
    return (
        <section id="about" style={{ padding: '2rem' }}>
            <h2>About AquaLife</h2>
            <p>
